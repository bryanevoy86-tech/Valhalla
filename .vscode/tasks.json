				"label": "lint",
				"type": "shell",
				"command": "ruff check . --fix; black ."
			},
		{
			"label": "types",
			"type": "shell",
			"command": "mypy ."
		},
		{
			"label": "tests",
			"type": "shell",
			"command": "pytest -q"
