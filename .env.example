
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/valhalla
ENV=dev
DEBUG=true
JWT_SECRET=change-me
FEATURE_FLAGS_JSON={"shield": false, "funfund": false}
NOTIFY_URL=
CORS_ALLOWED_ORIGINS=http://localhost:4000,https://valhalla.weweb-preview.io,https://editor.weweb.io,https://preview.weweb.io

# S3 Storage
STORAGE_PROVIDER=s3
S3_BUCKET=valhalla-prod
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# DocuSign PowerForm (no-code)
DOCUSIGN_POWERFORM_URL=https://powerform.docusign.com/xxxx?name={seller_name}&address={address}&price={ask}

# Sentry
SENTRY_DSN=

# Heimdall Builder API (v3.4)
HEIMDALL_BUILDER=on
HEIMDALL_BUILDER_API_KEY=change-me
BUILDER_SAFE_MODE=on
AUTO_DEPLOY=off
ALLOW_DESTRUCTIVE=off

# Optional
HEMDALLTTELEMETRY_SAMPLING=0.2

# Owner auth (required for ops protection)
VALHALLA_AUTH_ENABLED=true
VALHALLA_JWT_SECRET=change-me-rotate
VALHALLA_OWNER_USERNAME=owner

# Preferred: PBKDF2 hash produced via helper snippet below
VALHALLA_OWNER_PASSWORD_HASH=

# TEMP (dev/sandbox only). Do not use in production.
VALHALLA_OWNER_PASSWORD=

# Optional: Token TTL in seconds (default: 3600 = 1 hour)
VALHALLA_TOKEN_TTL_SECONDS=3600

# API docs exposure (production default: false, unless explicitly enabled)
VALHALLA_PUBLIC_DOCS=false

# App environment (overrides ENV)
APP_ENV=dev
