      "legend":{"show":true} },
    { "type": "timeseries", "title": "Latency pass ratio (p95<thr)",
      "gridPos": {"h":8,"w":12,"x":12,"y":12},
      "targets":[
        {"expr":"valhalla:slo_latency_ratio:30m"},
        {"expr":"valhalla:slo_latency_ratio:2h"}
      ],
      "legend":{"show":true} }
  ]
